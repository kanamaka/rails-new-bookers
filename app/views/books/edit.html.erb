<!DOCTYPE html>
<html>
  <head>
    <title>
    </title>
  </head>
  <body>
    <h1 class="edit-book">
      Editing Book
    </h1>
    <%= form_with model: @book, local:true do |f| %>
     <% if @book.errors.any? %>
      <%= @book.errors.count %> error
      <% @book.errors.full_messages.each do |book| %>
       <%= book %>
      <% end %>
    <% end %>
    <p class="book-title">Title</p>
    <%= f.text_field :title %>
    <p class="book-body">Body</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %><br>
    <%= link_to "show", book_path %>
    |
    <%= link_to "back", books_path %>
    <% end %>
  </body>
</html>