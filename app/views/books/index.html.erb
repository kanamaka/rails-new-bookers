<!DOCTYPE html>
<html>
  <head>
    <title>WebCamoBookendNew</title>
    <head>
      <link rel="stylesheet" href="asset/stylesheet/index.scss" />
    </head>
<div class="main">
  <div class="Books">
    <h1>Books</h1>
    </head>
    <table>
      <head>
      <thead>
        <tr>
          <th class="box1">
            Title
          </th>
          <th class="box2">
            Body
          </th>
        </tr>
        </thead>
      <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "edit", edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
      </tbody>
      </head>
    </table>
    </head>
      <body>
        <div class="sidebar">
          <%= @book.title %>
        </div>
        <h2>New book</h2>
        <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
        <% end %>
        <%= form_with model: @book, local: true do |f| %>
         <p>Title</p>
         <%= f.text_field :title %>
         <p>Body</p>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book' %>
        <% end %>
      </body>
    </table>
  </div>
</div>
</html>
