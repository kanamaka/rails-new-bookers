<div class="main">
  <div class="Books">
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @book.title %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>




<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>